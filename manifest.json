{
    "name": "EasyNote",
    "version": "0.0.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "devtools/index.html",
    "content_scripts": [
        /*
            Lib
        */
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/lib/lib.js"]
        },
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/lib/class.js"]
        },
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/content.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "icons/19x19.png",
            "38": "icons/38x38.png"
        },
        "default_title": "That's the tool tip",
        "default_popup": "browseraction/pop.html"
    }
}